{
  "name": "ConvergeHub Lead Generator",
  "short_name": "CLG",
  "description": "Lead capture from LinkedIn, Facebook, Twitter, Gmail and many more. Free CRM included.",
  "version": "2.3.6",
  "manifest_version": 3,
  "author": "Reya Dutta",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.js",
        "config.js",
        "popup.html",
        "popup.css",
        "images/*",
        "helper/*",
        "library/*",
        "language/*",
        "js/*",
        "css/*"
      ],
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.facebook.com/*",
        "*://*.x.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://api.convergehub.com/*"
  ]
}